<% provide(:title, "お問い合わせ") %>
<div class = "main contact-main">
 <h2>お問い合わせ</h2
 <div class="row">
  <div class="col-md-6 col-md-offset-3">
　  <%= form_for(@contact) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
      
    <%= f.label :name, "お名前（必須）" %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email, "メールアドレス（必須）" %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :message, "お問い合わせ内容（必須）" %>
    <%= f.text_area :message, class: 'form-control', placeholder: "ご入力ください" %>

  　
    <p>※必須項目は必ずご入力ください</p>

    <%= f.submit "送信", class: "btn-area" %>
　<% end %>
　</div>
 </div>
</div>