<% provide(:title, @user.name) %>
<div class="main row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.image_name? %>
          <%= image_tag @user.image_name, size: "50x50" %>
        <% else %>
          <img src="/user_images/avater.jpg", class="avater_image" >
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>投稿一覧 (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>