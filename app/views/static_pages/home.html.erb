    </div>
    <%= image_tag"sikiri.jpg", :size => "200x70" %><%= image_tag"sikiri.jpg", :size => "200x70" %><%= image_tag"sikiri.jpg", :size => "200x70" %><%= image_tag"sikiri.jpg", :size => "200x70" %><%= image_tag"sikiri.jpg", :size => "200x70" %>
