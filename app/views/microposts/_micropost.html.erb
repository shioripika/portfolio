<li id="micropost-<%= micropost.id %>">
 <div class="micro_form">
  <% if micropost.user.image_name? %>
    <%= image_tag micropost.user.image_name, size: "50x50" %>
  <% else %>
    <img src="/user_images/avater.jpg", class="avater_image" >
  <% end %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>  
  </span>
  <span class="timestamp">
   <%= time_ago_in_words(micropost.created_at) %> 前に投稿
   <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "本当に削除しますか?" } %>
    <% end %>
   </span>
   <%= render "likes/like", micropost: micropost %>
  
 </div>  
</li>